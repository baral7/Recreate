@*model IEnumerable<BankFull.Models.UserMessage> *@

@using BankFull.Controllers;
@model IEnumerable<MessagerateViewModel>










<div id="clk" style="display:none" class="alert alert-success" role="alert">
  This is a success alert—check it out!
</div>

<h1 class="text-dark">Message</h1>
<hr />
   
<p>
    <a asp-action="Create" class="text-info anc "><i class="fa-solid fa-folder-plus fa-lg"></i> Create Message</a>
</p>
<table class="table tablecolor">
    <thead class="bg-info">
        <tr>
            
           
             <th>
                bank
            </th>
            <th>
                Amount
            </th>
            <th>
                date
            </th>
            <th>
                document
            </th>
            <th>
                message
            </th>
               
           <th > 
             </th>

            
            @if(@User.IsInRole("Admin")){
             <th > Sent by
            </th>

              
             <th >   sent to
            </th>
            <th > 
             </th>
            }
             <th > 
             </th>
              
        </tr>
    </thead>
    <tbody>
@foreach (MessagerateViewModel item in Model){
        <tr>
           
           <td>
                @Html.DisplayFor(modelItem => item.bankdet.Name) 
            </td>
          
             
            <td class="cas">
                
                @Html.DisplayFor(modelItem => item.tbllist.Amount) ( @Html.DisplayFor(modelItem => item.ratelist.Rate) )
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tbllist.Date)
            </td>
            <td>

                <img src=" @Html.DisplayFor(modelItem => item.tbllist.DocumentPath)" width="50px"/>
               
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tbllist.Messages)
            </td>
             <td class="msgid invisible">
                @Html.DisplayFor(modelItem => item.tbllist.Id)
            </td>
             @if(@User.IsInRole("Admin")){
             <td>
                  @Html.DisplayFor(modelItem => item.usr.Name)
                        
            </td>   
            
           
                    <td>

                        <div class="form-group">                      
                           <select  class ="form-control data" asp-for=" @item.usr.Id"   asp-items="ViewBag.usr"></select> 
                        </div>

                    </td>
                    <td>

                <input type="submit"  class="btn btn-success userid"  data-value="@item.tbllist.Id"/> 
             
            </td>
                
            }
                
            <td>
                <a asp-action="Edit" asp-route-id="@item.tbllist.Id"><i class="fa-lg anc text-success fa-regular fa-pen-to-square"></i></a> |
               @* <a asp-action="Details" asp-route-id="@item.Id">Details</a> *@
               <a asp-action="Delete" asp-route-id="@item.tbllist.Id"><i class="fa-lg anc text-danger fa-solid fa-trash-can"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>


<script>
   

$(document).ready(function() {


      

   
    
    var c = @ViewBag.rate;

    

     $(".ad").append("("+c+")")

   
    $(".userid").click(function(e){

        // var id =  $(this).attr("#data-value");

       var cid = $(this).closest('tr').find('.data').val();

       var Msid = $(this).closest('tr').find("td:eq(5)").text();
       var Mssgid = parseInt(Msid);


        console.log("Hello")
         $.ajax({

        'url' : '/Sender/Index',
        'type' : 'Post',
        'data' : { Mssgid,cid
           
        },
        'success' : function() {       
            
            $("#clk").css({
                "display": "block",
            });
        },
        'error' : function()
        {
           window.location.href = "https://localhost:44346/tblMessages"
        }
    });
    })
})

</script>